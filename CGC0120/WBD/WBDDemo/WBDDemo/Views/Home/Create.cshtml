@model Employee
@{
    ViewBag.Title = "Create Employee";
 }

    <form asp-action="Create" asp-controller="Home" method="post" class="mt-2">
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Department"></label>
            </div>
            <div class="col-sm-10">
                <select asp-for="Department" class="custom-select" asp-items="@Html.GetEnumSelectList<Dept>()"></select>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="home" asp-action="index" class="btn btn-warning">Back</a>
            </div>
        </div>
    </form>