@model HomeCreateViewModel
@{
    ViewBag.Title = "Create Employee";
 }

    <form enctype="multipart/form-data" asp-action="Create" asp-controller="Home" method="post" class="mt-2">
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Department"></label>
            </div>
            <div class="col-sm-10">
                <select asp-for="Department" class="custom-select" asp-items="@Html.GetEnumSelectList<Dept>()">
                    <option value="">Please select a department</option>
                </select>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2" >
                <label asp-for="Photo"></label>
            </div>
            <div class="custom-file col-sm-10">
                <input asp-for="Photo" class="custom-file-input">
                <label class="custom-file-label mx-3" for="customFile">Choose file</label>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="home" asp-action="index" class="btn btn-warning">Back</a>
            </div>
        </div>
    </form>

@section Scripts{ 
<script>
    $(document).ready(function () {
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    });
</script>
}