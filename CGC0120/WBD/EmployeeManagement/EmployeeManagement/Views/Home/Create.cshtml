                    }
                </select>*@
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        @*<label asp-for="Photos" class="col-sm-2 col-form-label"></label>
        <div class="custom-file col-sm-10">
            <input multiple asp-for="Photos" class="custom-file-input" />
            <label class="custom-file-label mx-sm-3" for="customFile">Choose file</label>
        </div>*@
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="custom-file col-sm-10">
            <input asp-for="Photo" class="custom-file-input" />
            <label class="custom-file-label mx-sm-3" for="customFile">Choose file</label>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-warning">Back</a>
        </div>
    </div>
</form>
